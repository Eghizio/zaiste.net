{% extends "layouts/index.njk" %}
{% block content %}
<div class="row">
  <div class="col-md-9">
    <article class="content is-large">
      <h1 class="title">{{ page.title }}</h1>

      <div class="subtitle meta">
        <small>{{ page.created_at | date }} Â·</small>
        <div class="tags">
          {% for tag in page.tags %}
          <a class="badge badge-pill badge-light" href="/tags/{{ tag }}">{{ tag }}</a>
          {% endfor %}
        </div>
      </div>

      {% if page.image %}
      <img class="header img-fluid" src="/images/{{ page.image }}" alt="">
      {% endif %}

      {{ content | safe }}
    </article>
  </div>
  <div class="col-md-3">
    <aside class="menu">
      <p class="menu-label">
        Table of Contents
      </p>
      {{ toc | safe }}
    </aside>
  </div>
</div>
{% endblock %}
