{% extends "layouts/index.njk" %}
{% block content %}
<article>
  <h1 class="title">{{ tag }}</h1>
  <ul class="articles">
    {% for post in posts %}
    <li>
      <h2><a href="/{{ post.path }}">{{ post.title }}</a></h2>
      <span>{{ post.created_at | date }} Â·</span>
      <ul class="tags">
        {% for tag in post.tags %}
        <li><a href="/tags/{{ tag }}">{{ tag }}</a></li>
        {% endfor %}
      </ul>
    </li>
    {% endfor %}
  </ul>
</article>
{% endblock %}
